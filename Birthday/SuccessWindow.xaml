<Window x:Class="Birthday.SuccessWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Birthday"
        mc:Ignorable="d"
        Title="生日快乐" Height="450" Width="597.417" WindowStyle="ThreeDBorderWindow">
    <Grid Height="Auto" Margin="0,0,0,3">
        <Grid.Background>
            <ImageBrush ImageSource="SuccessWindowPicture.jpg" Opacity="0.7"/>
        </Grid.Background>
        <TextBlock x:Name="textBlock" Margin="10,51,10,227" TextWrapping="Wrap" RenderTransformOrigin="0.505,-0.055" FontSize="50">
            <TextBlock.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Red" Offset="0"/>
                    <GradientStop Color="#FFFFA200" Offset="1"/>
                </LinearGradientBrush>
            </TextBlock.Foreground>
        </TextBlock>
    </Grid>
</Window>
